# environment
export PATH="/usr/local/opt/coreutils/libexec/gnubin:/opt/puppetlabs/bin:/opt/puppetlabs/puppet/bin:/usr/local/bin:/usr/local/sbin:/bin:/sbin:/usr/bin:/usr/sbin:/usr/games/bin:/snap/bin:${PATH}"
export MANPATH="/usr/local/man:/usr/share/man:${MANPATH}"

# putty home/end
bindkey "[1~" beginning-of-line
bindkey "[4~" end-of-line

# history
export HISTSIZE=2000
export HISTFILE="$HOME/.history"
export SAVEHIST=$HISTSIZE
export TERM=xterm-256color
